{
    "collection": "Books",
    "query": [
        {
            "$group": {
                "_id": "$authors",  
                "average_age": {"$avg": "$original_publication_year"},  
                "User_count": {"$sum": 1}  
            }
        },
        {
            "$sort": {"average_discount": 1}  
        }
    ]
}

{   
    "collection" : "Books",
    "query":{
        "language_code": {
            "$eq": "eng"
        },  
        "Year-Of-Publication": {
            "$gt": 2000
        }
    }
}

{   
    "collection" : "Books",
    "query":{
        "average_rating": {
            "$gte": "3"
        },  
        "original_title": {
            "b.original_title": { "$regex": "Harry"}
        }
    }
}