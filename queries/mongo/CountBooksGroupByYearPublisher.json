{
    "collection": "Books",
    "query": [
        {
            "$group": {
                "_id": "$Publisher",  
                "average_Year_of_Publication": {"$avg": "$Year-Of-Publication"},  
                "Book_count": {"$sum": 1}  
            }
        },
        {
            "$sort": {"average_Year_of_Publication": 1}  
        }
    ]
}
